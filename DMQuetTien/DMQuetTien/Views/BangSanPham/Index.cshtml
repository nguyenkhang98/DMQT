@model IEnumerable<DMQuetTien.Models.BangSanPham>

@{
    ViewBag.Title = "Index";
}

<h2>Danh Sách Sản Phẩm</h2>

<p>
    <input type="text" placeholder="Search..">
    <a href="@Url.Action("Create")" class="btn btn-primary">Thêm sản phẩm</a>
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Giá bán
        </th>
        <th>
            Giá gốc
        </th>
        <th>Giá góp
        </th>
        <th>
            Số lượng tồn
        </th>
        <th>
            Tên loại
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaGoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaGop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuongTon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoai)
            </td>
            <td>
                <a href="DMQuetTien/Edit?id=item.id" class="btn btn-success">Sửa</a>
                <a href="DMQuetTien/Details?id=item.id" class="btn btn-warning">Xem</a>
                <a href="DMQuetTien/Delete?id=item.id" class="btn btn-danger">Xóa</a>
                
            </td>
        </tr>
    }

</table>
